{
    "editor.tabSize": 2,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    // "cmake-tools-helper.cmake_download_path": "/home/luca/.vscode-oss/extensions/maddouri.cmake-tools-helper-0.2.1/cmake_download",
    // "cmake.configureOnOpen": true,
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "C_Cpp.default.cStandard": "c11",
    // "cmake.buildBeforeRun": false,
    // "cmake.parseBuildDiagnostics": false,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": false,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                ";"
            ],
            "after": [
                ":"
            ]
        },
        {
            "before": [
                "d"
            ],
            "after": [
                "\"",
                "_",
                "d"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],
    "workbench.panel.defaultLocation": "right",
    "workbench.colorTheme": "One Dark Pro",
    // "terminal.integrated.cursorBlinking": true,
    // "terminal.integrated.cursorStyle": "line",
    // Use Terminal.app's default colors
    "workbench.colorCustomizations": {
        "terminal.ansiBlack": "#000000",
        "terminal.ansiRed": "#c23621",
        "terminal.ansiGreen": "#25bc24",
        "terminal.ansiYellow": "#adad27",
        "terminal.ansiBlue": "#492ee1",
        "terminal.ansiMagenta": "#d338d3",
        "terminal.ansiCyan": "#33bbc8",
        "terminal.ansiWhite": "#cbcccd",
        "terminal.ansiBrightBlack": "#818383",
        "terminal.ansiBrightRed": "#fc391f",
        "terminal.ansiBrightGreen": "#31e722",
        "terminal.ansiBrightYellow": "#eaec23",
        "terminal.ansiBrightBlue": "#5833ff",
        "terminal.ansiBrightMagenta": "#f935f8",
        "terminal.ansiBrightCyan": "#14f0f0",
        "terminal.ansiBrightWhite": "#e9ebeb",
    },
    // "python.pythonPath": "/home/luca/opt/anaconda3/bin/python",
    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "python.condaPath": "/home/luca/opt/anaconda3/bin/",
    "python.jediEnabled": false,
    "python.formatting.yapfArgs": [
        "--style",
        "{based_on_style: chromium, indent_width: 2, column_limit: 999, spaces_around_default_or_named_assign: true, space_between_ending_comma_and_closing_bracket: true}"
    ],
    "python.formatting.provider": "yapf",
    "spellright.notificationClass": "information",
    "C_Cpp.clang_format_style": "{BasedOnStyle: Google, IndentWidth: 2, AlignConsecutiveAssignments: false, SpaceAfterCStyleCast: true, SpaceBeforeAssignmentOperators: true, SpacesInContainerLiterals: true, SpacesInParentheses: true, SpacesInSquareBrackets: true, ColumnLimit: 999, SpaceBeforeRangeBasedForLoopColon: true, SpaceBeforeParens: Always, AlignAfterOpenBracket: AlwaysBreak, AllowAllParametersOfDeclarationOnNextLine: false, BinPackArguments: false, BinPackParameters: false, AllowShortLoopsOnASingleLine: false}",
    "C_Cpp.updateChannel": "Insiders",
    "spellright.language": [
        "English (American)"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "latex-workshop.view.pdf.ref.viewer": "tabOrBrowser",
    "latex-workshop.view.pdf.external.command": {
        "command": "okular",
        "args": [
            "%PDF%"
        ]
    },
    "window.zoomLevel": 0
}